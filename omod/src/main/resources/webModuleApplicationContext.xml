<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:component-scan base-package="org.openmrs.module.vxnaid.web.controller"/>

    <bean class="org.openmrs.ui.framework.StandardModuleUiConfiguration">
        <property name="moduleId" value="${project.parent.artifactId}"/>
    </bean>

    <bean class="org.openmrs.ui.framework.page.GlobalResourceIncluder">
        <property name="resources">
            <list>
                <bean class="org.openmrs.ui.framework.resource.Resource">
                    <property name="category" value="js"/>
                    <property name="providerName" value="${project.parent.artifactId}"/>
                    <property name="resourcePath" value="scripts/jspdf.umd.min.js"/>
                    <property name="priority" value="1"/>
                </bean>
                <bean class="org.openmrs.ui.framework.resource.Resource">
                    <property name="category" value="js"/>
                    <property name="providerName" value="${project.parent.artifactId}"/>
                    <property name="resourcePath" value="scripts/qrcode.min.js"/>
                    <property name="priority" value="2"/>
                </bean>
                <bean class="org.openmrs.ui.framework.resource.Resource">
                    <property name="category" value="js"/>
                    <property name="providerName" value="${project.parent.artifactId}"/>
                    <property name="resourcePath" value="scripts/uuid.min.js"/>
                    <property name="priority" value="3"/>
                </bean>
                <bean class="org.openmrs.ui.framework.resource.Resource">
                    <property name="category" value="js"/>
                    <property name="providerName" value="${project.parent.artifactId}"/>
                    <property name="resourcePath" value="scripts/uuidv4.js"/>
                    <property name="priority" value="4"/>
                </bean>
                <bean class="org.openmrs.ui.framework.resource.Resource">
                    <property name="category" value="js"/>
                    <property name="providerName" value="${project.parent.artifactId}"/>
                    <property name="resourcePath" value="scripts/qrCodeFunctions.js"/>
                    <property name="priority" value="4"/>
                </bean>
            </list>
        </property>
    </bean>
</beans>
